<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.a40two.pext.ui.AboutActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@android:color/background_dark">

    <TextView
        android:id="@+id/about_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/about_text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/my_github_button"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:background="@android:color/background_dark"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="creator\'s github"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="197dp"
        tools:layout_editor_absoluteX="111dp"
        app:layout_constraintTop_toBottomOf="@+id/about_text"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linkedin_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bitcoin_button"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Donate Via Bitcoin"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="309dp"
        tools:layout_editor_absoluteX="110dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/linkedin_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/linkedin_button"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="creator\'s linkedin"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="252dp"
        tools:layout_editor_absoluteX="110dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/about_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        tools:layout_editor_absoluteY="453dp"
        tools:layout_editor_absoluteX="0dp"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">
    </com.google.android.gms.ads.AdView>
</android.support.constraint.ConstraintLayout>
