<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:animateLayoutChanges="true">

    <net.a40two.pext.ui.views.AdvancedEditText
        android:id="@+id/editorAdvancedTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:allowUndo="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="start"
        android:hint="Type some things here. If you exit the app, they should still be here when you get back! Long-press the &quot;Paste&quot; button to see the last few things you've cut/copied!"
        android:inputType="textMultiLine|textNoSuggestions"
        android:text=""
        android:textAlignment="inherit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:id="@+id/constraintLayout">

        <Button
            android:id="@+id/clear_button"
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="8dp"
            android:text="clear"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/paste_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/paste_button"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/cut_button"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:padding="0dp"
            android:text="cut"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/pastebin_button"
            app:layout_constraintTop_toTopOf="@+id/copy_button"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/paste_button"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="25dp"
            android:padding="0dp"
            android:text="paste"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/copy_button" />

        <Button
            android:id="@+id/pastebin_button"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginLeft="3dp"
            android:padding="0dp"
            android:text="paste to pastebin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cut_button" />

        <Button
            android:id="@+id/copy_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:padding="0dp"
            android:text="copy"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cut_button"
            app:layout_constraintTop_toTopOf="@+id/paste_button"
            app:layout_constraintVertical_bias="0.666" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>