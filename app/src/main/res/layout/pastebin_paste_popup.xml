<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".ui.fragments.PastebinLoginPopup"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textViewPaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paste Options"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/expireSpinner"
        android:layout_width="366dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary"
        android:foreground="@color/colorTextIcons"
        android:foregroundTint="@color/colorPrimary"
        tools:layout_editor_absoluteY="118dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginBottom="0dp" />

    <Spinner
        android:id="@+id/syntaxSpinner"
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:foreground="@color/colorTextIcons"
        android:foregroundTint="@color/colorPrimary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/expireSpinner"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/expireSpinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/expireSpinner" />

    <Spinner
        android:id="@+id/privacySpinner"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimary"
        android:foreground="@color/colorTextIcons"
        android:foregroundTint="@color/colorPrimary"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/syntaxSpinner"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/syntaxSpinner"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/syntaxSpinner" />

    <Button
        android:id="@+id/submitPasteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/privacySpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPaste"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/expireSpinner"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textViewPaste"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewPaste" />
</android.support.constraint.ConstraintLayout>
